MAX_USERS = 30000             -> small for now
MAX_FOLLOWING = 1000         -> max number a user can follow
RANDOM_INCR = 1              -> 0 - increment by 1/R_total
			     -> 1 - increment by random time based on R_total

VERBOSE = 0                  -> 0 - debugging
			     -> 1 - write normally
			     -> 2 - no output 
			     
T_FINAL = 525600.0           ->  1/10 year 

R_ADD = 0.002                ->    1/47 seconds, comes from 200 million active
				 twitter users / 8 years
R_FOLLOW = 0.004         ->    1/week
R_TWEET = 0.006           ->    1/ 2 days

P_OUT = 1		     -> print p_out file (1)
			     -> dont print (0)

